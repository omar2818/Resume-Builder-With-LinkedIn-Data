@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <span class="nav-link text-dark">Hello, @User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value!</span>
        </li>
        <li class="nav-item">
            <form asp-controller="Home" asp-action="Logout" method="post" id="logoutForm">
                <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="Login">Login</a>
        </li>
    </ul>
}