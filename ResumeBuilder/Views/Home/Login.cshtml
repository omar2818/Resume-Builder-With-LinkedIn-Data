@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Connect with LinkedIn</h5>
                    <p class="card-text">Import your professional experience and education data from LinkedIn.</p>
                    <form asp-action="LoginWithLinkedIn" method="post">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-linkedin"></i> Login with LinkedIn
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
